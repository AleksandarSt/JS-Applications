{{> header}}

<main>
<section id="viewCart">
    <h1>My Cart</h1>

    {{#if hasProducts}}
            <div class="products" id="cartProducts">
                <table>
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
                        {{> product}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
        </main>
    {{else}}
        <p>Empty cart</p>
    {{/if}}



{{> footer}}